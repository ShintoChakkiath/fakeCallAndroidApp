<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_row"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/gallery_btn_4"
        app:civ_border_color="#ffeeeeee"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#ff8bc34a"
        app:civ_shadow_radius="10.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/text_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:text="Santa Claus"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="25dp"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:text="Santa Claus"
            android:textColor="#ffffffff"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>