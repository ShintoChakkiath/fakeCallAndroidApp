<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="#ff162533"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#ffffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/addcall"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:text="Add"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#ffffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_remove_circle_black_24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:text="Remove"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="#ffffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_person_add_black_24dp"
        android:paddingLeft="5dp"
        android:text="Choose Character"
        android:textColor="#ff000000"
        android:textStyle="bold" />
</LinearLayout>